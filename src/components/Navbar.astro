---
import DarkModeButton from "./DarkModeButton.astro";
import DownloadResume from "./DownloadResume.astro";

const navLinks = [
  { name: "Home", href: "/" },
  { name: "About", href: "/about" },
  { name: "Projects", href: "/projects" },
  { name: "Personal", href: "/personal" },
  { name: "Contact", href: "/contact" },
];
---

<nav
  class="bg-white py-3 px-4 sm:py-4 sm:px-6 dark:bg-gray-900 text-gray-900 dark:text-gray-100"
>
  <div class="max-w-3xl mx-auto flex justify-between items-center">
    <!-- Logo + Dark Mode (always visible) -->
    <div class="flex items-center gap-2 sm:gap-3">
      <a href="/" class="font-medium text-xl sm:text-2xl whitespace-nowrap"
        >JO Dev</a
      >
      <DarkModeButton class="hidden xs:block" />
    </div>

    <!-- Desktop Navigation (hidden on mobile) -->
    <div class="hidden sm:flex gap-4 md:gap-6 items-center">
      {
        navLinks.map((link) => (
          <a
            href={link.href}
            class="text-gray-600 hover:text-black dark:hover:text-gray-100 text-sm sm:text-base transition-colors"
          >
            {link.name}
          </a>
        ))
      }
      <DownloadResume />
    </div>

    <!-- Mobile Menu Button + Dark Mode (mobile only) -->
    <div class="flex items-center gap-3 sm:hidden">
      <button class="text-gray-600" aria-label="Menu">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu Dropdown -->
  <div class="sm:hidden mt-2 space-y-2 px-1 hidden">
    {
      navLinks.map((link) => (
        <a
          href={link.href}
          class="block py-2 px-3 text-gray-600 hover:text-black dark:hover:text-gray-100 rounded hover:bg-gray-50 dark:hover:bg-gray-800"
        >
          {link.name}
        </a>
      ))
    }
    <div class="pt-1">
      <DownloadResume class="w-full block px-3 py-2 text-left" />
    </div>
  </div>
</nav>

<script is:inline>
  document
    .querySelector('button[aria-label="Menu"]')
    .addEventListener("click", () => {
      const mobileMenu = document.querySelector(".mt-2.space-y-2");
      mobileMenu.classList.toggle("hidden");
    });
</script>
